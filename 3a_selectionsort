#include<stdio.h>
#include<stdlib.h>

int count =0;

void selection(int arr[],int n){
    count=0;
    int min=0;
    for(int i=0;i<n-2;i++){
        
        
        min=i;
        for(int j=i+1;j<n-1;j++){
            count++;
            if(arr[j]<arr[min]){
                min=j;
            }
        }
        if(min!=i){
            int temp=arr[i];
            arr[i]=arr[min];
            arr[min]=temp;

        }

    }
}

void tester(){
    int n;
    printf("Enter the value of n\n");
    scanf("%d",&n);
    int arr[n];
    printf("Enter the elements of an array\n");
    for(int i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    selection(arr,n);
    printf("The sorted order of the given array is \n");
    for(int i=0;i<n;i++){
        printf("%d\t",arr[i]);
    }
}

void plotter(){
    int *arr;
    FILE *fp1;
    FILE *fp2;
    int count1=0;
    fp1=fopen("Sel_Number.txt","w");
    fp2=fopen("Sel_count.txt","w");
    for(int k=10;k<=100;k+=10){
        arr=(int *)malloc(k*sizeof(int));
        // Here Best Average and worst case are same we cannot reduce the comparision but we can reduce the number of swappings
        for(int i=0;i<k;i++){
            arr[i]=rand()%100;
            fprintf(fp1,"%d ",arr[i]);
        }
        fprintf(fp1,"\n");

        selection(arr,k);
        count1=count;
        fprintf(fp2,"%d %d\n",k,count);

    
    }


}
int main() {
    int ch;

    printf("\n1. Tester\n2. Plotter\n");
    printf("Enter your choice: ");
    scanf("%d", &ch);

    switch (ch) {
        case 1:
            tester();
            break;

        case 2:
            plotter();
            break;

        default:
            printf("Invalid choice!!\n");
    }

    return 0;
}
