#include<stdio.h>
#include<stdlib.h>

int count =0;

void bubble(int arr[],int n){
    count=0;
    for(int i=0;i<n-1;i++){
        int exch=0; 
        for(int j=0;j<n-1-i;j++){
            count++;
            if(arr[j]>arr[j+1]){
                exch=1;
                int temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
            }
            
        }
        if(exch==0){
                break;
            }
        

        }

    
}

void tester(){
    int n;
    printf("Enter the value of n\n");
    scanf("%d",&n);
    int arr[n];
    printf("Enter the elements of an array\n");
    for(int i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    bubble(arr,n);
    printf("The sorted order of the given array is \n");
    for(int i=0;i<n;i++){
        printf("%d\t",arr[i]);
    }
}

void plotter(){
    int *arr;
    FILE *fp1;
    FILE *fp2;
    int count1=0;
    int count2=0;
    int count3=0;
    fp1=fopen("bub_Number.txt","w");
    fp2=fopen("bub_count.txt","w");
    for(int k=10;k<=100;k+=10){
        arr=(int *)malloc(k*sizeof(int));
        
         //Best Case
         arr[0]=rand()%100; 
         fprintf(fp1,"%d ",arr[0]);    
        for(int i=1;i<k;i++){
            arr[i]=arr[i-1]+2;
            fprintf(fp1,"%d ",arr[i]);
        }
        fprintf(fp1,"\n");
        bubble(arr,k);
        count1=count;

        //Average Case
        
        for(int i=0;i<k;i++){
            arr[i]=rand()%100;
            fprintf(fp1,"%d ",arr[i]);
        }
        fprintf(fp1,"\n");
        bubble(arr,k);
        count2=count;

        //Worst case
            
        arr[0]=rand()%1000;
        fprintf(fp1,"%d ",arr[0]);
         for(int i=1;i<k;i++){
            arr[i]=arr[i-1]-2;
            fprintf(fp1,"%d ",arr[i]);
        }
        fprintf(fp1,"\n");
        bubble(arr,k);
        count3=count;

        fprintf(fp2,"%d %d %d %d\n",k,count1,count2,count3);




       



    
    }


}
int main() {
    int ch;

    printf("\n1. Tester\n2. Plotter\n");
    printf("Enter your choice: ");
    scanf("%d", &ch);

    switch (ch) {
        case 1:
            tester();
            break;

        case 2:
            plotter();
            break;

        default:
            printf("Invalid choice!!\n");
    }

    return 0;
}
